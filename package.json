{
  "name": "node-mongo-graphql-api",
  "version": "1.0.0",
  "description": "An example of Api created with Nodejs, Hapi, MongoDB, GraphQl and Swagger",
  "main": "index.js",
  "repository": "https://github.com/almarto/node-mongo-graphql-api.git",
  "author": "alberto.martinez<alberto.martinez.developer@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "nodemon --exec ./node_modules/.bin/ts-node -- ./src/index.ts",
    "docker:logs": "docker-compose logs",
    "docker:ps": "docker-compose ps",
    "docker:start": "docker-compose up -d",
    "docker:stop": "docker-compose -f docker-compose.yml down -v --remove-orphans",
    "format:lint": "tslint -c tslint.json -p tsconfig.json --fix 'src/**/*.ts'",
    "format:prettier": "./node_modules/.bin/prettier  --trailing-comma all --write 'src/**/*.ts'"
  },
  "dependencies": {
    "hapi": "^17.5.4",
    "mongoose": "^5.2.14",
    "nodemon": "^1.18.4"
  },
  "keywords": [
    "api",
    "nodejs",
    "hapi",
    "typescript",
    "graphql",
    "swagger",
    "mongo",
    "mongoose"
  ],
  "devDependencies": {
    "@types/hapi": "^17.0.19",
    "@types/mongoose": "^5.2.15",
    "pre-commit": "^1.2.2",
    "prettier": "^1.14.3",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.0.3"
  },
  "pre-commit": [
    "format:lint",
    "format:prettier"
  ]
}
